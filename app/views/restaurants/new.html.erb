<h2>Create a new restaurant</h2>

<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name, label: 'Restaurant name', placeholder: 'San Marzanos' %>
  <%= f.input :address, placeholder: 'address' %>
  <%= f.input :phone_number, placeholder: 'phone number' %>
  <%= f.input :category, priority: [ "" ], collection: ['Chinese', 'Italian', 'Japanese', 'French', 'Belgian'] %>
  <%= f.button :submit %>
<% end %>
